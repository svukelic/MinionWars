<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Minions Wars</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Minion Wars", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#" data-toggle="modal" data-target="#userPageModal"><img src="~/Content/icons/barbute.png" /> User info</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#battlegroupPageModal"><img src="~/Content/icons/winged-sword.png" /> Battlegroups</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#userPageModal"><img src="~/Content/icons/castle.png" /> Camps</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#resourcesPageModal"><img src="~/Content/icons/locked-chest.png" /> Resources</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <!--<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Minion Wars</p>
        </footer>-->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
