<div id="groupCreationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add minions to Battlegroup</h4>
            </div>
            <div class="modal-body">
                <form id="groupCreationForm">
                    <label for="bgroupList">Battlegroup: </label>
                    <select id="bgroupList" name="bgroupList">
                        <option value="0">Margaritha</option>
                        <option value="1">Hawai</option>
                    </select><br />
                    
                    <label for="amount">Amount: </label>
                    <input type="number" id="amount" name="amount" /><br />

                    <label for="line">Line: </label><br />
                    <input type="radio" name="line" value="1"> Frontline
                    <input type="radio" name="line" value="2"> Backline
                    <input type="radio" name="line" value="3"> Supportline
                    
                    <hr />
                    
                    <label for="additionName">Create new group: </label>
                    <input type="text" id="additionName" name="additionName" placeholder="Name" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="submitGroupAddition()">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
