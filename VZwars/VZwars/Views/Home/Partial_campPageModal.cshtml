@model VZwars.Models.UserDataModel
@using MinionWarsEntitiesLib.Models
@using VZwars.Models
<div id="campPageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="~/Content/icons/castle.png" /> Camps</h4>
            </div>
            <div class="modal-body">
                <div id="campTabs">
                    <ul>
                        <li><a href="#modalPersonalCamps">Personal Camps</a></li>
                        <li><a href="#modalReputation">Reputation</a></li>
                    </ul>

                    <div id="modalPersonalCamps">
                        @if (Model.personalCamps.Count > 0)
                        {
                            foreach (Camp camp in Model.personalCamps)
                            {
                                <div class="row">
                                    <div class="col-md-3">
                                        <img src="~/Content/icons/castle.png" />
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-default" data-toggle="collapse" data-target="#camp-@camp.id">Details <img class="glyphicon-collapse-down"/></button>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-default" onclick="panToLocation(@camp.location.Latitude, @camp.location.Longitude)">Location</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <hr />
                                </div>

                                <div  id="camp-@camp.id" class="collapse">
                                    <div id="campDetailTabs">
                                        <ul>
                                            <li><a href="#modalCampStructures">Structures</a></li>
                                            <li><a href="#modalCampMinions">Minions</a></li>
                                            <li><a href="#modalCampResources">Resources</a></li>
                                        </ul>

                                        <!-- Personal Battlegroup-->
                                        <div id="modalCampStructures">
                                            <p>Richness: @camp.richness</p>
                                        </div>
                                        <div id="modalCampMinions">
                                        </div>
                                        <div id="modalCampResources">
                                        </div>
                                        <p id="campDistance"></p>
                                    </div>
                                    <div class="row">
                                        <hr />
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                        <div class="row">
                            <p>No personal camps!</p>
                        </div>
                        }
                    </div>

                    <div id="modalReputation">
                        @Html.Partial("Partial_battlegroupRemote")
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
