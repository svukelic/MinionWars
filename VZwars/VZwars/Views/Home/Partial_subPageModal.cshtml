@model VZwars.Models.UserDataModel
@using MinionWarsEntitiesLib.Models
@using VZwars.Models
<div id="subPageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="~/Content/icons/cash.png" /> Subscription Trader</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        Remaining subscription: 0
                    </div>
                </div>
                <div class="row">
                    <hr />
                </div>
                <div class="row">
                   <div class="col-md-6">
                       <ul>
                           <li>Gain access to Neutral Traders</li>
                           <li>Gain access to Message Board</li>
                           <li>One free Transmutation every month</li>
                       </ul>
                   </div>
                    <div class="col-md-6">
                        <form id="subForm">
                            <input type="radio" name="payment" value="1"> 1 Month - 5€<br>
                            <input type="radio" name="payment" value="3"> 3 Months - 12€<br>
                            <input type="radio" name="payment" value="6"> 6 Months - 20€<br>
                        </form>
                        <button class="btn btn-default" onclick="buySubscription()">Subscribe</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
