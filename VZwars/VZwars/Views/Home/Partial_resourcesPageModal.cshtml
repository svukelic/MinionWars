@model VZwars.Models.UserDataModel
@using MinionWarsEntitiesLib.Models
@using VZwars.Models
<div id="resourcesPageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="~/Content/icons/locked-chest.png" /> Resources</h4>
            </div>
            <div class="modal-body" style="text-align: center;">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">Food <img src="~/Content/icons/corn.png" /></div>
                            <div class="panel-body">
                                    @foreach (TreasuryModel tm in Model.treasury.Where(x => x.category.Equals("food")))
                                    {
                                        <div class="row">
                                            <p>@tm.name - @tm.amount</p>
                                        </div>
                                        <div class="row">
                                            <hr />
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h1>Wood <img src="~/Content/icons/pine-tree.png" /></h1>
                        @foreach (TreasuryModel tm in Model.treasury.Where(x => x.category.Equals("wood")))
                        {
                            <p>@tm.name - @tm.amount</p>
                            <hr />
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h1>Metal <img src="~/Content/icons/metal-bar.png" /> </h1>
                        @foreach (TreasuryModel tm in Model.treasury.Where(x => x.category.Equals("metal")))
                        {
                            <p>@tm.name - @tm.amount</p>
                            <hr />
                        }
                    </div>
                    <div class="col-md-6">
                        <h1>Stone <img src="~/Content/icons/stone-pile.png" /></h1>
                        @foreach (TreasuryModel tm in Model.treasury.Where(x => x.category.Equals("stone")))
                        {
                            <p>@tm.name - @tm.amount</p>
                            <hr />
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
