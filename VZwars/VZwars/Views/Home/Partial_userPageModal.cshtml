@model VZwars.Models.UserDataModel
<div id="userPageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="~/Content/icons/barbute.png" /> User info</h4>
            </div>
            <div class="modal-body">
                <div id="userTabs">
                    <ul>
                        <li><a href="#modalInfo">Personal stats</a></li>
                        <li><a href="#modalHistory">History</a></li>
                    </ul>
                    <!-- User info -->
                    <div id="modalInfo">
                        <div class="row">
                            <p>Username: @Html.DisplayTextFor(model => model.userModel.username) </p>
                            <p>Level: @Model.userModel.lvl</p>
                            <p>Experience: @Model.userModel.experience</p>
                            <p>Available points: @Model.userModel.points</p>
                            <hr />
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <p>Leadership: @Model.userModel.trait_leadership </p>
                                <p>Logistics: @Model.userModel.trait_logistics </p>
                                <p>Architecture: @Model.userModel.trait_architecture </p>
                                <p>Economics: @Model.userModel.trait_economics </p>
                            </div>
                            <div id="traitBtns" class="col-md-3">
                                <p><button type="button" class="btn-default" onclick="increaseTrait(1)">+</button> </p>
                                <p><button type="button" class="btn-default" onclick="increaseTrait(2)">+</button> </p>
                                <p><button type="button" class="btn-default" onclick="increaseTrait(3)">+</button> </p>
                                <p><button type="button" class="btn-default" onclick="increaseTrait(4)">+</button> </p>
                            </div>
                         </div>
                    </div>
